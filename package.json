{
  "name": "@syntrojs/singleton",
  "version": "0.1.0",
  "description": "A simple, type-safe abstraction for the singleton pattern. Works in Node.js, Bun, browsers, and vanilla JavaScript",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format --write ."
  },
  "keywords": [
    "singleton",
    "registry",
    "service-locator",
    "dependency-injection",
    "instance-management",
    "typescript",
    "nodejs",
    "bun",
    "browser",
    "pattern",
    "di",
    "container"
  ],
  "author": "SyntropySoft",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Syntropysoft/syntrojs-singleton.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@stryker-mutator/core": "8.7.1",
    "@stryker-mutator/typescript-checker": "8.7.1",
    "@stryker-mutator/vitest-runner": "8.7.1",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^2.1.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

